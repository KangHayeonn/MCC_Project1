<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:srcCompat="@drawable/mju_logo" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:orientation="horizontal"
        android:background="#76A2DB"
        android:gravity="center">

        <Button
            android:id="@+id/Button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:adjustViewbounds="true"
            android:background=""
            android:text="&lt;"
            android:textSize="30dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="회원가입"
            android:textStyle="bold"
            android:textSize="30dp"
            android:textColor="#FFFFFF"
            android:gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:paddingTop="30dp"
        android:paddingBottom="30dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:orientation="vertical"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:id="@+id/textViewID"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:text="ID"
                android:textSize="25dp"/>

            <EditText
                android:id="@+id/editTextID"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:ems="10"
                android:inputType="textPersonName"
                android:text=""
                android:textSize="20dp"
                android:backgroundTint="#CAE9F0"/>

            <Button
                android:id="@+id/Button1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:backgroundTint="#76A2DB"
                android:text="중복확인"
                android:textStyle="bold"
                android:textColor="FFFFFF"
                android:textSize="12dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:id="@+id/textViewPW"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:text="PW"
                android:textSize="25dp" />

            <EditText
                android:id="@+id/editTextPW"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="7"
                android:ems="10"
                android:inputType="textPersonName"
                android:text=""
                android:textSize="20dp"
                android:backgroundTint="#CAE9F0"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:id="@+id/textViewPW2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:text="PW확인"
                android:textSize="25dp" />

            <EditText
                android:id="@+id/editTextPW2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="7"
                android:ems="10"
                android:inputType="textPersonName"
                android:text=""
                android:textSize="20dp"
                android:backgroundTint="#CAE9F0"/>
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:id="@+id/textViewname"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:text="이름"
                android:textSize="25dp" />

            <EditText
                android:id="@+id/editTextname"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="7"
                android:ems="10"
                android:inputType="textPersonName"
                android:gravity="center"
                android:text=""
                android:textSize="20dp"
                android:backgroundTint="#CAE9F0"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:id="@+id/textViewnum"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:text="학번"
                android:textSize="25dp" />

            <EditText
                android:id="@+id/editTextnum"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="7"
                android:ems="10"
                android:inputType="textPersonName"
                android:gravity="center"
                android:text=""
                android:textSize="20dp"
                android:backgroundTint="#CAE9F0"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:id="@+id/textViewdep"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:text="학과"
                android:textSize="25dp" />

            <EditText
                android:id="@+id/editTextdep"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="7"
                android:ems="10"
                android:inputType="textPersonName"
                android:text=""
                android:textSize="20dp"
                android:backgroundTint="#CAE9F0"/>
        </LinearLayout>

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:text="" />

        <Button
            android:id="@+id/Button2"
            android:layout_width="300dp"
            android:layout_height="0dp"
            android:layout_weight="1.7"
            android:backgroundTint="#76A2DB"
            android:text="회원가입"
            android:textStyle="bold"
            android:textSize="25dp"
            android:onClick="ClickButton2"/>

    </LinearLayout>

</LinearLayout>