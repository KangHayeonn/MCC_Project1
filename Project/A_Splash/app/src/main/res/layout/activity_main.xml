<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#CAE9F0"
    android:orientation="vertical"
    android:layout_margin="5dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="10">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFEE"
            android:src="@drawable/mju_logo" />
        <!-- android:typeface="serif"  글씨 변경 -->

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:id="@+id/studentID"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:drawableRight="@drawable/a11"
                android:scaleType="matrix"
                android:text="학생증"
                android:textColor="#000000"
                android:textSize="34dp"
                android:background="@drawable/button_background"

                app:backgroundTint="#FFFFFF" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/Key"
                android:layout_width="match_parent"
                android:layout_height="113dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/button_background"
                android:drawableRight="@drawable/a21"
                android:text="생활관 키 "
                android:textColor="#000000"
                android:textSize="23dp"
                app:backgroundTint="#FFFFFF" />


            <Button
                android:id="@+id/Ticket"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:text="식권"
                android:textColor="#000000"
                android:textSize="23dp"
                android:drawableRight="@drawable/a22"
                android:background="@drawable/button_background"
                app:backgroundTint="#FFFFFF" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">


            <Button
                android:id="@+id/Library"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:text="도서관"
                android:textColor="#000000"
                android:textSize="23dp"
                android:drawableRight="@drawable/a31"
                android:background="@drawable/button_background"
                app:backgroundTint="#FFFFFF" />

            <Button
                android:id="@+id/LMS"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:text="LMS"
                android:textColor="#000000"
                android:textSize="23dp"
                android:drawableRight="@drawable/a32"
                android:background="@drawable/button_background"
                app:backgroundTint="#FFFFFF" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:id="@+id/Notice"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:text="공지사항 "
                android:textColor="#000000"
                android:textSize="23dp"
                android:drawableRight="@drawable/a41"
                android:background="@drawable/button_background"
                app:backgroundTint="#FFFFFF" />

            <Button
                android:id="@+id/Homepage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:text="학교 홈페이지"
                android:textColor="#000000"
                android:textSize="18dp"
                android:drawableRight="@drawable/a42"
                android:background="@drawable/button_background"
                app:backgroundTint="#FFFFFF" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">


            <Button
                android:id="@+id/Map"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:text="학교 지도"
                android:textColor="#000000"
                android:textSize="30dp"
                android:drawableRight="@drawable/a51"
                android:background="@drawable/button_background"
                app:backgroundTint="#FFFFFF" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>